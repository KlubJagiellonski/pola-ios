source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '8.0'
inhibit_all_warnings!

target :Pola do
    use_frameworks!
    pod 'Fabric', '~> 1.9.0'
    pod 'Crashlytics', '~> 3.12.0'
    pod 'Firebase/Analytics', '~> 6.1.0'
    pod 'UITextView+Placeholder'
    pod 'KVNProgress'
    pod 'R.swift'
    pod 'Alamofire'
    pod 'Swinject'
    pod 'PromiseKit/Alamofire'
    pod 'Observable'
    
    target :PolaTests do
      pod 'iOSSnapshotTestCase'
    end
    
    target :PolaUITests do
      pod 'iOSSnapshotTestCase'
      pod 'Swifter', '~> 1.4.7'
    end

end

pod 'SwiftFormat/CLI'
pod 'SwiftLint'
